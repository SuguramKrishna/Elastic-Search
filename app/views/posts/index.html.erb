<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<p>
  Press <%= link_to 'here', search_posts_path %> to search for posts.
</p>

<table style="width: 100%;">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published on</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
       <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= post.published_on %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
