<h1>New Post</h1>

<%= form_for @post do |f| %>
 <div>
     <%= f.label :author %><br>
     <%= f.text_field :author %> 
   </div>

   <div>
     <%= f.label :title %><br>
     <%= f.text_field :title %> 
   </div>

    <div>
     <%= f.label :body %><br>
     <%= f.text_area :body %>
    </div>

     <div>
     <%= f.label :tags %><br>
     <%= f.text_area :tags %>
    </div>

    <div>
     <%= f.label :published %><br>
     <%= f.check_box(:published, {}, "True", "False") %>
    </div>

    <div>
    <%= f.time_field :published_on, value: Time.now %>
     </div>
    
     <%= f.submit %>
   </div>
<% end %>

<%= link_to 'Back', posts_path %>
